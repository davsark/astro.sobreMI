<style>
h1{
margin-top: 10px;
padding: 5px;
display: inline-block;
color: white;

}
.cabeza {
    text-align: center;
    padding: 5px;
    background-color: #2c3e50;
    max-width: 100%;
}
ul{
    margin-top: 1px;
}
li{
    list-style: none;
    display: inline-block;
    margin-right: 20px;
    text-align: center;
}
button{
    background-color: #f0f0f0;
    border-radius: 15px;
    color: black;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 18px;
    margin: 1px 2px;
    cursor: pointer;
}
button:hover {
    color: white;
    background-color: #1abc9c; /* Cambia el color al pasar el mouse */
  transform: scale(1.1); /* Aumenta ligeramente el tamaño */
}

@media (max-width: 768px) {
  ul {
    display: flex;
    flex-direction: row; /* Mantiene los <li> en fila */
    justify-content: center; /* Opcional: centra los botones */
    padding: 0;
    margin: 0;
  }

  li {
    display: flex; /* O inline-flex */
    margin-right: 10px;
    margin-bottom: 0; /* No más margen inferior */
  }

  button {
    font-size: 16px;
    padding: 8px 16px;
  }
}

/* Media query para móviles */
@media (max-width: 480px) {
  ul {
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 0;
    margin: 0;
  }

  li {
    display: flex;
    margin-right: 8px;
    margin-bottom: 0;
  }

  button {
    font-size: 14px;
    padding: 6px 12px;
  }

  .cabeza {
    padding: 3px;
  }
}
</style>