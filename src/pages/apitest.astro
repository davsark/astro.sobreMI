---
import Layout from "../layouts/Layout.astro"
import Counter from "../components/Counter.jsx"
---

<Layout title="Apis">
    <body>
        <h1>Ejemplo de obtecion de Api</h1>
        <div class="contador">
            <Counter client:load />
        </div>
    </body>
</Layout>



<style>
body{
    margin:auto;
    text-align: center;
}
.contador{
    display: flex;
    flex-direction: column;
    align-items: center;
}
/* Media query para tablets */
@media (max-width: 768px) {
    ul {
        padding: 0 20px;
    }
    
    li {
        padding: 15px;
    }
}

/* Media query para m√≥viles */
@media (max-width: 480px) {
    h1 {
        font-size: 24px;
    }

    li {
        padding: 10px;
        margin: 10px 0;
    }

    h2 {
        font-size: 18px;
    }

    p {
        font-size: 14px;
    }
}

</style>