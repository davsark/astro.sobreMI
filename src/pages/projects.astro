---
import projects from '../content/projects.json';
import Layout from '../layouts/Layout.astro';
---


<Layout title="Proyectos">
<ul>
    <h1>Mis Proyectos</h1>
  {projects.map(project => (
    
    <li>
  <a href={`/projects/${project.slug}`} style="display: block; text-decoration: none; color: inherit;">
    <h2>{project.title}</h2>
    <p>{project.description}</p>
    <p><strong>Tecnologías:</strong> {project.stack}</p>
    <p>{project.fecha}</p>
  </a>
  <div>
    <a href={project.github} target="_blank" rel="noopener noreferrer">Ver en GitHub</a>
    {project.demo && 
      <a href={project.demo} target="_blank" rel="noopener noreferrer">Ver Demo</a>
    }
  </div>
</li>
  ))}
    
</ul>

</Layout>

<style>
h1 {
    text-align: center;
    color: #2c3e50;
    margin: 20px 0;
    padding: 10px;
}

ul {
    list-style: none;
    padding: 0;
    max-width: 800px;
    margin: 0 auto;
}

li {
    background-color: #f0f0f0;
    margin: 15px 0;
    padding: 20px;
    border-radius: 10px;
    border: 2px solid #2c3e50;
    transition: transform 0.3s ease;
}

li:hover {
    transform: scale(1.02);
}

h2 {
    color: #2c3e50;
    margin: 0 0 10px 0;
}

a {
    text-decoration: none;
    color: #2c3e50;
}

p {
    margin: 10px 0;
    line-height: 1.5;
}

/* Media query para tablets */
@media (max-width: 768px) {
    ul {
        padding: 0 20px;
    }
    
    li {
        padding: 15px;
    }
}

/* Media query para móviles */
@media (max-width: 480px) {
    h1 {
        font-size: 24px;
    }

    li {
        padding: 10px;
        margin: 10px 0;
    }

    h2 {
        font-size: 18px;
    }

    p {
        font-size: 14px;
    }
}
</style>