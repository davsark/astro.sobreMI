---
const {title} = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<main>
			<slot />
		</main>
		<Footer/>
	</body>
	
</html>

<style>
	html{
		font-family:  Menlo, Monaco, Lucida Console, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	
h1{
margin-top: 10px;
padding: 5px;
display: inline-block;
color: white;

}
.cabeza {
    text-align: center;
    padding: 5px;
    background-color: #2c3e50;
    max-width: 100%;
}
ul{
    margin-top: 1px;
}
li{
    list-style: none;
    display: inline-block;
    margin-right: 20px;
    text-align: center;
}
button{
    background-color: #f0f0f0;
    border-radius: 15px;
    color: black;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 18px;
    margin: 1px 2px;
    cursor: pointer;
}
button:hover {
    color: white;
    background-color: #1abc9c; /* Cambia el color al pasar el mouse */
  transform: scale(1.1); /* Aumenta ligeramente el tamaño */
}

/* Media query para tablets */
@media (max-width: 768px) {
  li {
    display: block; /* Apila los elementos verticalmente */
    margin-right: 0;
    margin-bottom: 10px;
  }

  button {
    font-size: 16px; /* Reduce el tamaño del texto */
    padding: 8px 16px; /* Reduce el padding */
  }
}

/* Media query para móviles */
@media (max-width: 480px) {
  h1 {
    font-size: 20px; /* Reduce el tamaño del título */
    padding: 3px;
  }

  li {
    display: block; /* Apila los elementos verticalmente */
    margin-right: 0;
    margin-bottom: 8px;
  }

  button {
    font-size: 14px; /* Reduce aún más el tamaño del texto */
    padding: 6px 12px; /* Reduce el padding */
  }

  .cabeza {
    padding: 3px; /* Reduce el padding del header */
  }
}

</style>
